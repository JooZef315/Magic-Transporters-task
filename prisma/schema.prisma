generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Movers {
  id          String  @id @default(uuid())
  weightLimit Int
  energy      Int
  questState  String  @default("RESTING")
  Items       Items[]
}

model Items {
  id          String  @id @default(uuid())
  name        String  @unique
  weight      Int
  isCompleted Boolean @default(false)
  mover       Movers? @relation(fields: [moversId], references: [id])
  moversId    String?
}
